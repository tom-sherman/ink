{
	"compilerOptions": {
		"outDir": "build",
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"sourceMap": true,
		"jsx": "react",
		"isolatedModules": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext"
	},
	"include": ["src"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
		"experimentalSpecifierResolution": "node"
	}
}
